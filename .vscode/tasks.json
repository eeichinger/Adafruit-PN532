{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Arduino: Build Active File",
        "type": "shell",
        "command": "arduino-cli compile --fqbn arduino:avr:uno --warnings default --libraries ${workspaceFolder} -o /tmp/output.hex ${file}",
        "isBackground": false,
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true
        },
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "Arduino: Upload Active File",
        "type": "shell",
        "command": "arduino-cli compile -p /dev/cu.usbmodem14201 -v --warnings default --fqbn arduino:avr:uno --libraries ${workspaceFolder} -o /tmp/output.hex -u -t  ${file}",
        "isBackground": false,
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true
        },
        "problemMatcher": [],
        "group": {
            "kind": "test",
            "isDefault": true
        }
    }
]
}